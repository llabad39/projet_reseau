CFLAGS = -Wall
CC = gcc
EXEC = serverTCP clientTCP


all: $(EXEC)

serverTCP: serverTCP.o protocolTCP.o utils.o
	$(CC) -o serverTCP serverTCP.o

clientTCP: clientTCP.o protocolTCP.o utils.o
	$(CC) -o clientTCP clientTCP.o 

serverTCP.o: serverTCP.c protocolTCP.h utils.h
	$(CC) -o serverTCP.o -c serverTCP.c $(CFLAGS)

clientTCP.o: clientTCP.c protocolTCP.h utils.h
	$(CC) -o clientTCP.o -c clientTCP.c $(CFLAGS)

clean:
	rm -rf *.o

mrproper: clean
	rm -rf $(EXEC)
